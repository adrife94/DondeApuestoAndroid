<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Casas">

    <LinearLayout
     android:layout_width="match_parent"
     android:gravity="center"
     android:layout_height="wrap_content">

     <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/idsportium"
         android:text="Sportium"
         />
     <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/idbetfair"
         android:text="betfair"
         />
 </LinearLayout>


 <LinearLayout
     android:layout_width="match_parent"
     android:gravity="center"
     android:layout_height="wrap_content">

     <Button
         android:layout_width="wrap_content"
         android:text="Marca"
         android:id="@+id/idmarca"
         android:layout_height="wrap_content"
         />
     <Button
         android:layout_width="wrap_content"
         android:id="@+id/idsuertia"
         android:text="Suertia"
         android:layout_height="wrap_content"
         />
 </LinearLayout>
 <LinearLayout
     android:layout_width="match_parent"
     android:gravity="center"
     android:layout_height="wrap_content">

     <Button
         android:layout_width="wrap_content"
         android:text="Barcelona"
         android:id="@+id/idbarcelona"
         android:layout_height="wrap_content"
         />
     <Button
         android:layout_width="wrap_content"
         android:id="@+id/idgolden"
         android:text="Golden"
         android:layout_height="wrap_content"
         />
 </LinearLayout>
 <LinearLayout
     android:layout_width="match_parent"
     android:gravity="center"
     android:layout_height="wrap_content">

     <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/idmbet"
         android:text="Mbet"
         />
     <Button
         android:layout_width="wrap_content"
         android:id="@+id/idinterwetten"
         android:text="Interwetten"
         android:layout_height="wrap_content"
         />
 </LinearLayout>

</LinearLayout>